<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="eafit.analisisnumerico.mathapp.Interpolacion.NevilleInterpolacionActivity">

    <ScrollView
        android:id="@+id/layout_nevinter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="horizontal|vertical"
        android:layout_below="@+id/ayuda_neville">

        <HorizontalScrollView
            android:id="@+id/horizontalView_nevinter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:scrollbars="horizontal|vertical">


            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/Table_nevinter"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_resultnevi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ayuda_neville"
        android:layout_alignEnd="@+id/ayuda_neville"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/ayuda_neville">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/solo_result_nevInter"
            android:layout_alignTop="@+id/layout_nevinter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/layout_nevinter"
            android:layout_alignEnd="@+id/layout_nevinter" />
    </HorizontalScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayuda"
        android:id="@+id/ayuda_neville"
        style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
        android:textColor="@color/Azul"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/layout_nevinter"
        android:layout_alignEnd="@+id/layout_nevinter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
