<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="eafit.analisisnumerico.mathapp.Ecuaciones_de_una_variable.BusquedasIncrementalesActivity">


    <Button


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ?"
        android:id="@+id/ayuda_bi"
        android:textSize="20dp"
        android:capitalize="none"
        style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/x1_bi"
        android:layout_below="@+id/ayuda_bi"
        android:layout_alignRight="@+id/ayuda_bi"
        android:layout_alignEnd="@+id/ayuda_bi"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:editable="true"
        android:hint="X inicial"
        android:inputType="number|numberSigned|numberDecimal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/delta_bi"
        android:layout_below="@+id/x1_bi"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:editable="true"
        android:hint="Amplitud (delta X)"
        android:inputType="number|numberSigned|numberDecimal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iter_bi"
        android:layout_below="@+id/delta_bi"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:editable="true"
        android:hint="Iteraciones"
        android:inputType="number|numberSigned|numberDecimal" />

    <Button
        style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/calcular_bi"
        android:textSize="20dp"
        android:capitalize="none"
        android:layout_below="@+id/iter_bi"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Graficar"
        android:id="@+id/graficar_bi"
        android:textSize="20dp"
        android:capitalize="none"
        android:layout_below="@+id/iter_bi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/resultado_bi"
        android:layout_below="@+id/calcular_bi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:id="@+id/volver_bi"
        android:textSize="20dp"
        android:capitalize="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/ayuda_bi"
        android:layout_toStartOf="@+id/ayuda_bi" />

</RelativeLayout>
