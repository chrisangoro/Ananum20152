<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="eafit.analisisnumerico.mathapp.Sistema_de_Ecuaciones.MethodSistemaDeEcuacionesActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="entrar"
        android:id="@+id/entrarmatriz_bt"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayuda"
        android:id="@+id/ayuda_bt_matrices"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TamaÃ±o:"
        android:id="@+id/tam_tv"
        android:textSize="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/ayuda_bt_matrices" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tam_et"
        android:layout_toRightOf="@+id/tam_tv"
        android:layout_toStartOf="@+id/entrarmatriz_bt"
        android:layout_alignBottom="@+id/tam_tv"
        android:textSize="20dp"
        android:layout_alignRight="@+id/entrarmatriz_bt"
        android:layout_alignEnd="@+id/entrarmatriz_bt"
        android:layout_alignTop="@+id/tam_tv"
        android:inputType="number|numberSigned|numberDecimal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/matriz_et"
        android:layout_below="@+id/tam_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/entrarmatriz_bt"
        android:layout_alignRight="@+id/ayuda_bt_matrices"
        android:layout_alignEnd="@+id/ayuda_bt_matrices" />
</RelativeLayout>
