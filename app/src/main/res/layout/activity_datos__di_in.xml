<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eafit.analisisnumerico.mathapp.Diferenciacion_e_Integracion.Datos_DiInActivity">

    <TextView
        android:id="@+id/Datos_diint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Datos"
        android:textColor="@color/Azul"
        android:textSize="50dp" />

    <Button
        android:id="@+id/ayuda_diint"
        style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Datos_Interpolacion"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text=" ?"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/funcion_diint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Datos_diint"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:hint="Funcion" />

    <EditText
        android:id="@+id/A_diint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ayuda_diint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ayuda_diint"
        android:layout_below="@+id/funcion_diint"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="A - Extremo 1"
        android:inputType="number|numberPassword|phone|numberSigned|numberDecimal" />

    <EditText
        android:id="@+id/B_diint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ayuda_diint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ayuda_diint"
        android:layout_below="@+id/A_diint"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="B - Extremo 2"
        android:inputType="number|numberPassword|phone|numberSigned|numberDecimal" />

    <Button
        android:id="@+id/entrar_diint"
        style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Entrar"
        android:textSize="35dp"
        android:layout_below="@+id/nroPart_diint"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/nroPart_diint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ayuda_diint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ayuda_diint"
        android:layout_below="@+id/B_diint"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Numero de Puntos"
        android:inputType="number|numberPassword|phone|numberSigned|numberDecimal" />

</RelativeLayout>
