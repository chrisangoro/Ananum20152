<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="eafit.analisisnumerico.mathapp.Interpolacion.DatosInterpolacionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos"
        android:id="@+id/Datos_Interpolacion"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Azul"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ?"
        style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
        android:id="@+id/ayuda_interpolacion"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/Datos_Interpolacion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberPassword|phone|numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/xn_et_inter"
        android:layout_below="@+id/Datos_Interpolacion"
        android:layout_marginTop="42dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Xn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberPassword|phone|numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/yn_et_inter"
        android:hint="Yn"
        android:layout_below="@+id/xn_et_inter"
        android:layout_alignRight="@+id/ayuda_interpolacion"
        android:layout_alignEnd="@+id/ayuda_interpolacion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/x_inter"
        android:hint="f(x)"
        android:layout_below="@+id/yn_et_inter"
        android:layout_alignRight="@+id/ayuda_interpolacion"
        android:layout_alignEnd="@+id/ayuda_interpolacion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
        android:id="@+id/entrartInter_bt"
        android:layout_below="@+id/x_inter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:textSize="35dp" />
</RelativeLayout>
